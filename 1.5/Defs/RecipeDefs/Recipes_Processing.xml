<Defs>
  <RecipeDef>
    <defName>MakeOneFlourLowTech</defName>
    <label>process one wheat</label>
    <description>Wheat can be processed to produce flour and hay.</description>
    <jobString>Processing wheat.</jobString>
    <workAmount>50</workAmount>
    <workSpeedStat>CookSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Mill</soundWorking>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>RawWheat</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <products>
      <Flour>1</Flour>
      <Hay>1</Hay>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>RawWheat</li>
      </thingDefs>
    </fixedIngredientFilter>
    <workSkill>Cooking</workSkill>
  </RecipeDef>
