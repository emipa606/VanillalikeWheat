  <!-- ==================== Rack ======================= -->
  <ThingDef ParentName="BuildingBase">
    <defName>HayRack</defName>
    <label>hay rack</label>
    <graphicData>
      <texPath>Things/Buildings/Rack/Rack</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(3.5,1.5)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <drawerType>MapMeshAndRealTime</drawerType>
    <minifiedDef>MinifiedThing</minifiedDef>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
    <thingCategories>
      <li>BuildingsProduction</li>
    </thingCategories>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.5</fillPercent>
    <pathCost>70</pathCost>
    <statBases>
      <WorkToBuild>400</WorkToBuild>
      <Mass>20</Mass>
      <MaxHitPoints>150</MaxHitPoints>
      <Flammability>1.0</Flammability>
    </statBases>
    <description>A simple rack for drying hay into straw.</description>
    <size>(3,1)</size>
    <costList>
      <WoodLog>20</WoodLog>
    </costList>
    <uiIconPath>Things/Buildings/Rack/RackHay_north</uiIconPath>
    <uiIconScale>1.3</uiIconScale>
    <comps>
      <li Class="CompProperties_Forbiddable" />
      <li Class="ProcessorFramework.CompProperties_Processor">
        <capacity>100</capacity>
        <independentProcesses>false</independentProcesses>
        <parallelProcesses>false</parallelProcesses>
        <dropIngredients>false</dropIngredients>
        <showProductIcon>true</showProductIcon>
        <barOffset>(0.0, -0.75)</barOffset>
        <barScale>(1.0, 1.0)</barScale>
        <colorCoded>false</colorCoded>
        <processes>
          <li>VLW_Straw_Process</li>
        </processes>
      </li>
    </comps>
    <tickerType>Rare</tickerType>
    <designationCategory>Production</designationCategory>
    <constructEffect>ConstructWood</constructEffect>
    <rotatable>true</rotatable>
  </ThingDef>
</Defs>
