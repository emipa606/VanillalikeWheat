<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="PlantBase">
    <defName>PlantWheat</defName>
    <label>wheat plant</label>
    <description>A thin, fragile grain plant which produces small yellow seeds. Takes a relatively long time to grow and yields lots of food, but requires further processing to be eatable. Needs fertile soil to grow well.</description>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Nutrition>0.3</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plants/WheatMature</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>10</pathCost>
    <ingestible />
    <plant>
      <fertilityMin>0.70</fertilityMin>
      <dieIfLeafless>true</dieIfLeafless>
      <harvestTag>Standard</harvestTag>
      <maxMeshCount>4</maxMeshCount>
      <harvestedThingDef>RawWheat</harvestedThingDef>
      <harvestYield>17</harvestYield>
      <sowMinSkill>6</sowMinSkill>
      <sowResearchPrerequisites>
        <li>WheatFarming</li>
      </sowResearchPrerequisites>
      <sowTags>
        <li>Ground</li>
      </sowTags>
      <topWindExposure>0.20</topWindExposure>
      <growDays>12</growDays>
      <fertilitySensitivity>1.0</fertilitySensitivity>
      <visualSizeRange>0.5~1.0</visualSizeRange>
      <immatureGraphicPath>Things/Plants/WheatImmature</immatureGraphicPath>
      <wildOrder>2</wildOrder>
      <purpose>Food</purpose>
    </plant>
  </ThingDef>
</Defs>
